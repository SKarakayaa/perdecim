@using Entities.DTO.Address;
@model List<AddressViewDTO>
@{
    ViewData["Title"] = "Adreslerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row" style="margin-top: 10%; margin-bottom: 20%;">
        <div class="col-md-4">
            <partial name="_ProfileSidebar" />
        </div>
        <div class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading text-center"><b>Adreslerim</b></div>
                <div class="panel-body">
                    @if (Model.Count != 0)
                    {
                        @foreach (var userAddress in Model)
                        {
                            <div class="col-md-6" style="margin-top: 15px;">
                                <div class="well-lg" style="border: 1px solid black;">
                                    <h3><i class="@userAddress.AddressType.IconClassName"></i> @userAddress.AddressType.Name
                                    </h3><br>
                                    <p>@userAddress.FullAddress</p><br>
                                    <div class="pull-right">
                                        <a asp-controller="Address" asp-action="CreateOrUpdate" asp-route-id="@userAddress.AddressId"><i class="glyphicon glyphicon-edit text-info"></i> Güncelle</a>
                                        <a onclick="SwalDeleteModal('@userAddress.AddressId',null,'/Address/Delete')"><i class="glyphicon glyphicon-trash text-danger"></i> Sil</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <div class="well-lg">
                                    <h2>HENÜZ ADRES EKLEMEDİNİZ !</h2>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div class="well-lg">
                                <a asp-controller="Address" asp-action="CreateOrUpdate"><i class="fa fa-plus"></i> YENİ ADRES
                                    EKLE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>