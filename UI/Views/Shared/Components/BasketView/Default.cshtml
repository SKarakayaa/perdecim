@model List<UI.Models.Cart.CartModel>

@if (Model.Count == 0)
{
    <h4>Sepetinizde Ürün Bulunmamaktadır !</h4>
}
else
{
    foreach (var cartItem in Model)
    {
        <div class="cart-header">
            <div class="close1"> </div>
            <div class="cart-sec simpleCart_shelfItem">
                <div class="cart-item cyc">
                    <img src="images/p15.jpg" class="img-responsive" alt="">
                </div>
                <div class="cart-item-info">
                    <h3><a asp-controller="Product" asp-action="Index" asp-route-id="@cartItem.ProductId"> @cartItem.Product.Name </a></h3>
                    @if (cartItem.DemandTypes.Count != 0)
                    {
                        <br>
                        <p><u>Seçilenler</u></p>
                        <ul class="qty">
                            @foreach (var demandType in cartItem.DemandTypes)
                            {
                                <li><p>@demandType.ChoosedDemand</p></li>
                            }
                        </ul>
                    }
                    @if(!string.IsNullOrEmpty(cartItem.Note))
                    {
                        <br>
                        <p><u>İstek Notu :</u></p>
                        <p>@cartItem.Note</p>
                    }
                    <div class="delivery">
                        <p>Fiyat : @cartItem.TotalUnitPrice ₺</p><br>
                        <p>Miktar : @cartItem.Quantity Adet</p><br>
                        <p>Toplam Ürün Fiyatı : @(cartItem.Quantity * cartItem.TotalUnitPrice) ₺</p>
                        <span>En Geç 1 Haftaya Kargoda</span>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    }
    <hr>
    <a class="btn btn-danger btn-sm btn-block"><i class="fa fa-shopping-cart"></i> Toplam Ücret : @(Model.Sum(x=>x.Quantity * x.TotalUnitPrice)) ₺</a>
}
