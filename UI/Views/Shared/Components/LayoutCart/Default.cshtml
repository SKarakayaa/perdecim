@model IDataResult<CartDTO>

@Html.Hidden("HasCart",Model.IsSuccess)
<div class="header-right2">
    <div class="cart box_1">
        <div id="not-empty-cart" class="hidden">
            <a asp-controller="Cart" asp-action="Basket">
                <h3>
                    <div class="total">
                        <span class="simpleCart_total2">
                            @(Model.IsSuccess ? Model.Data.CartTotal:0) ₺
                        </span> (<span id="simpleCart_quantity2"
                            class="simpleCart_quantity2">@(Model.IsSuccess ? Model.Data.CartItemsCount : 0)</span> items)
                    </div>
                    <img src="~/images/bag.png" alt="" />
                </h3>
            </a>
        </div>
        <div id="empty-cart">
            <p><a href="javascript:;" class="simpleCart_empty">Sepetiniz Boş</a></p>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(() => {
        var cartCount = $("#HasCart").val();
        if (cartCount === "True") {
            $('#not-empty-cart').removeClass('hidden');
            $('#empty-cart').addClass('hidden');
        }
    })
</script>