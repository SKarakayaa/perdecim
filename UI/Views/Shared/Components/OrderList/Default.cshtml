@using Entities.Enums;
@model UI.Models.OrderListViewComponent.OrderListViewModel;

<div class="row">
    <div class="col-md-12">
        <div class="@Model.OrderListPanelInformation.PanelClass">
            <div class="panel-heading">@Model.OrderListPanelInformation.PanelTitle</div>
            <div class="panel-body">
                Sipariş Sayısı : @Model.ListCount
            </div>

            <table class="table table-stripped table-bordered">
                <thead>
                    <tr>
                        <th width="10%">Sipariş Numarası</th>
                        <th width="20%">Sipariş Veren</th>
                        <th width="20%">Telefon Numarası</th>
                        <th width="10%">Toplam Tutar</th>
                        <th width="40%"></th>
                    </tr>
                </thead>
                <tbody id="@Model.OrderListPanelInformation.TableId">
                    @if (Model.Orders.Any())
                    {
                        foreach (var orderItem in Model.Orders)
                        {
                            <tr id="@orderItem.Id">
                                <td>#@orderItem.Id</td>
                                <td>@orderItem.User.Name @orderItem.User.Surname</td>
                                <td>@orderItem.User.PhoneNumber</td>
                                <td>@orderItem.TotalPrice ₺</td>
                                <td class="text-center">
                                    <button class="btn btn-primary btn-sm">Detay</button>
                                    @Html.Raw(Model.OrderListPanelInformation.HtmlButton)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5"><b>Kayıt Bulunamadı</b></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
